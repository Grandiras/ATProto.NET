<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>ATProtoNet.Blazor</RootNamespace>
    <PackageId>ATProtoNet.Blazor</PackageId>
    <Description>Blazor components and services for AT Protocol applications â€” login forms, profile cards, feeds, and auth state integration.</Description>
